  /* index */

  #slider {
    width: 100%;
    height: 61vw;
    max-height: 650px;
  }

  #contents {
    width: 100%;
    margin: 50px auto 50px auto;
  }

  .img1 {
    width: 100%;
    max-width: 1200px;
  }

  #shoplist {
    width: calc(100% - 100px);
    max-width: 1400px;
    padding: 50px;
    margin: 0 auto;
    background-image: url(https://cdn.shopify.com/s/files/1/0429/2712/8731/files/bg.png?v=1603691919);
  }

  .shop {
    padding: 50px;
  }

  .img2 {
    width: 40%;
    display: inline-block;
    vertical-align: bottom;
  }

  .info {
    width: calc(59% - 100px);
    display: inline-block;
    vertical-align: top;
    padding: 50px;
  }

  h3 {
    color: #ffffff;
    font-size: 3.0rem;
    text-align: left;
    border-bottom: 5px solid;
  }

  .info p {
    font-size: 1.8rem;
    text-align: left;
    color: #ffffff;
  }

  .shopline {
    width: calc(100% - 100px);
    margin: 50px auto;
  }

  h2 {
    font-size: 3rem;
  }

  .shopinfo {
    width: 90%;
    max-width: 1200px;
    margin: 50px auto;
  }

  .shopinfo p {
    text-align: left;
    font-size: 2.0rem;
  }

  .shopdetail {
    display: inline-block;
    width: calc(60% - 50px);
    vertical-align: top;
    text-align: left;
    padding: 50px 50px 0 0;
    font-size: 1.2rem;
  }

  .readmore {
    width: 50%;
    max-width: 200px;
    margin-top: 50px;
  }

  .shopimage {
    display: inline-block;
    width: calc(40% - 5px);
  }

  .toitempage {
    background-color: #fff;
    padding: 10px;
    width: 30%;
    font-weight: bold;
    margin-top: 10px;
    }

  @media screen and (max-width:749px) {

    #shoplist {
    width: calc(100% - 20px);
    padding: 10px;
    }

    .shop {
      padding: 0;
    }

    .info {
      width: 100%;
      padding: 0 10px;
    }

    h3 {
      font-size: 22px;
    }

    .info p {
      font-size: 14px;
    }

    h2 {
      font-size: 24px;
    }

    .shopinfo p {
      font-size: 18px;
    }

    .shopdetail {
      display: block;
      width: 100%;
      padding: 0;
      font-size: 12px;
    }

    .readmore {
      margin-top: 5px;
    }

    .shopimage {
      display: block;
      width: 100%;
    }

    .toitempage {
    width:100%;
    }

  }


