
body {
  margin: 0;
  font-family: 游明朝,YuMincho,Hiragino Mincho ProN W3,ヒラギノ明朝 ProN W3,Hiragino Mincho ProN,HG明朝E,ＭＳ Ｐ明朝,ＭＳ 明朝,serif;
}

a {
  color: #000;
  text-decoration: none;
}

a:hover {
  opacity: 0.7;
}


#header {
  width: calc(100vw - 100px);
  height: 68px;
  position: fixed;
  padding: 0 50px;
  top: 0;
  background-color: #fff;
  z-index: 99999;
  border-bottom: 2px solid #5f5f5f;
}

#logo {
  display: inline-block;
  width: 300px;
  height: 70px;
}

#menu {
  display: inline-block;
  height: 70px;
  float: right;
}

#menubar {
  margin: 0;
  list-style: none;
  padding: 0;
}

#menubar li {
  display: inline-block;
  padding: 13px 0 0 10px;
  vertical-align: middle;
}

#ddmenu {
  line-height: 50px;
  display: none;
}

.wrapper {
  // margin-top: 70px;
  text-align: center;
}

#footer {
  width: 100%;
  height: 250px;
}

#ft {
  width: 100%;
  max-width: 1000px;
  border: 0;
  height: 2px;
  background-color: #383838;
  margin: auto;
}

#ftmenu {
  list-style: none;
  padding: 0;
  width: 100%;
  max-width: 500px;
  margin: 20px auto;
  text-align: center;
}

#ftmenu li {
  display: inline-block;
  padding: 5px;
  width: 150px;
  font-size: 0.7rem;
}

#name {
  text-align: center;
  width: 150px;
  margin: 80px auto 0 auto;
}

.req {
  color: red;
}
.font-gray {
  color: #ccc;
}

@media screen and (max-width:700px) { 

#logo {
  width: 215px;
  height: 50px;
}
#menubar {display: none;}
#ddmenu {display: inline-block;}
#header {
  height: 50px;
  padding: 0 10px;
  width: calc(100vw - 20px);
}

.wrapper {
  // margin-top: 50px;
  margin-top: 0;
}

}

